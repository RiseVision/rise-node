{
  "compilerOptions": {
    "target"                      : "es5",
    "module"                      : "commonjs",
    "emitDecoratorMetadata"       : true,
    "experimentalDecorators"      : true,
    "allowJs"                     : true,
    "moduleResolution"            : "node",
    "outDir"                      : "dist",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap"             : true,
    "inlineSources"               : true,
    "lib"                         : [
      "dom",
      "es5",
      "es6",
      "es2015.core",
      "es2015.promise"
    ]
  },
  "exclude"        : [
    "node_modules",
    "public",
    "dist",
    "coverage",
    "tests"
  ]
}