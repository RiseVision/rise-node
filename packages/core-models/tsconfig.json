{
  "compilerOptions": {
    "target":                       "es2017",
    "module":                       "commonjs",
    "emitDecoratorMetadata":        true,
    "experimentalDecorators":       true,
    "allowJs":                      false,
    "moduleResolution":             "node",
    "outDir":                       "dist",
    "baseUrl":                      ".",
    "declaration":                  true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap":              true,
    "skipLibCheck" : true,
    "inlineSources":                true,
    "lib":                          [
      "dom",
      "es7"
    ]
  },
  "include"        : [
    "./**/*"
  ],
  "exclude":         [
    "tests",
    "public",
    "dist",
    "coverage",
    "node_modules",
    "../../node_modules"
  ]
}