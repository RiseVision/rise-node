{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "inlineSources": true,
    "lib": ["dom", "es7", "esnext.bigint"]
  },
  "include": ["./**/*"],
  "exclude": [
    "tests",
    "public",
    "dist",
    "coverage",
    "node_modules",
    "../../node_modules"
  ]
}
