{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["dom", "es7"],
    "paths": {
      "@risevision/core-models": ["../core-models/*"],
      "@risevision/core-interfaces": ["../core-interfaces/*"],
      "@risevision/core-types": ["../core-types/*"],
      "@risevision/core-test-utils": ["../core-test-utils/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["tests", "public", "dist", "coverage", "node_modules"]
}
