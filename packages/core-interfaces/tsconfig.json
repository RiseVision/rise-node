{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "lib": ["dom", "es7", "esnext.bigint"],
    "paths": {
      "@risevision/core-types": ["../core-types/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["tests", "public", "dist", "coverage", "node_modules"]
}
