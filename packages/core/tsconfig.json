{
  "compilerOptions": {
    "target"                      : "es2017",
    "module"                      : "commonjs",
    "emitDecoratorMetadata"       : true,
    "experimentalDecorators"      : true,
    "allowJs"                     : true,
    "moduleResolution"            : "node",
    "outDir"                      : "dist",
    "baseUrl"                     : ".",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap"             : true,
    "inlineSources"               : true,
    "lib"                         : [
      "dom",
      "es7"
    ],
    "paths": {

      "@risevision/core-models": ["../core-models/*"],
      "@risevision/core-interfaces": ["../core-interfaces/*"],
      "@risevision/core-launchpad": ["../core-launchpad/*"],
      "@risevision/core-types": ["../core-types/*"],
      "@risevision/core-helpers": ["../core-helpers/*"],
      "@risevision/core-utils": ["../core-utils/*"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude"        : [
    "tests",
    "node_modules",
    "public",
    "dist",
    "coverage"
  ]
}
