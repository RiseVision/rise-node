{
  "compilerOptions": {
    "target"                      : "es2017",
    "module"                      : "commonjs",
    "emitDecoratorMetadata"       : true,
    "experimentalDecorators"      : true,
    "allowJs"                     : true,
    "moduleResolution"            : "node",
    "outDir"                      : "dist",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap"             : true,
    "inlineSources"               : true,
    "lib"                         : [
      "dom",
      "es7"
    ]
  },
  "exclude"        : [
    "tests",
    "node_modules",
    "public",
    "dist",
    "coverage"
  ]
}