{
  "compilerOptions": {
    "target":                       "es2017",
    "module":                       "commonjs",
    "emitDecoratorMetadata":        true,
    "experimentalDecorators":       true,
    "allowJs":                      false,
    "moduleResolution":             "node",
    "outDir":                       "dist",
    "baseUrl":                      ".",
    "declaration":                  true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap":              true,
    "inlineSources":                true,
    "lib":                          [
      "dom",
      "es7",
      "es2015"
    ],
    "paths": {
      "@risevision/core": ["../core/*"],
      "@risevision/core-models": ["../core-models/*"],
      "@risevision/core-interfaces": ["../core-interfaces/*"],
      "@risevision/core-exceptions": ["../core-exceptions/*"],
      "@risevision/core-types": ["../core-types/*"],
      "@risevision/core-helpers": ["../core-helpers/*"],
      "@risevision/core-launchpad": ["../core-launchpad/*"],
      "@risevision/core-transactions": ["../core-transactions/*"],
      "@risevision/core-utils": ["../core-utils/*"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude":         [
    "tests",
    "public",
    "dist",
    "coverage",
    "node_modules"
  ]
}
