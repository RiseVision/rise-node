FROM node:11-alpine

RUN apk --update add --no-cache --virtual .gyp \
        autoconf \
        automake \
        findutils \
        g++ \
        libtool \
        make \
        python \
        postgresql-dev \
        libc6-compat


WORKDIR /home/rise

# get the node_modules
COPY rebuild-modules.sh .

CMD /home/rise/rebuild-modules.sh
