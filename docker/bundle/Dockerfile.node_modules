FROM node:10-jessie-slim

RUN apt-get update
# keep in sync with packages/cli/src/node/install-deps.ts
RUN apt-get install -y \
		build-essential \
        python \
        postgresql-server-dev-all \
        libtool \
        autoconf

RUN curl -o- -L https://yarnpkg.com/install.sh | bash
RUN mkdir -p /home/rise

WORKDIR /home/rise

CMD $HOME/.yarn/bin/yarn install --pure-lockfile --production
